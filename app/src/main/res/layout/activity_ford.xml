<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FordActivity">

    <TextView
        android:id="@+id/textford"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE SELECT A MODEL OF FORD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroupford"
        android:layout_width="382dp"
        android:layout_height="198dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textford">

        <RadioButton
            android:id="@+id/radioButtonfiesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIESTA" />

        <RadioButton
            android:id="@+id/radioButtonfusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FUSION" />

        <RadioButton
            android:id="@+id/radioButtonmustang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MUSTANG" />

        <RadioButton
            android:id="@+id/radioButtonshelby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHELBY" />

        <RadioButton
            android:id="@+id/radioButtonedge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDGE" />

        <RadioButton
            android:id="@+id/radioButtonescape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESCAPE" />

    </RadioGroup>

    <Button
        android:id="@+id/buttoninternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE CLICK TO SELECT INTERNAL FEATURES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroupford" />

    <Button
        android:id="@+id/buttonexternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEAE CLICK TO SELECT EXTERNAL FEATURES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoninternal" />

    <Button
        android:id="@+id/buttonlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE SELECT A LOCATION."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonexternal" />

    <Button
        android:id="@+id/buttonreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="REVIEW ORDER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonlocation" />
</androidx.constraintlayout.widget.ConstraintLayout>