<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BmwActivity">

    <TextView
        android:id="@+id/textbmw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE SELECT A MODEL OF BMW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroupbmw"
        android:layout_width="382dp"
        android:layout_height="198dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbmw">

        <RadioButton
            android:id="@+id/radioButtonx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X (1-7)" />

        <RadioButton
            android:id="@+id/radioButtonm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M (2, 5, 8)" />

        <RadioButton
            android:id="@+id/radioButton740"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="740 (I, IXdRIVE)" />

        <RadioButton
            android:id="@+id/radioButtoni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I (3, 3S, 8)" />

        <RadioButton
            android:id="@+id/radioButton430"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="430I (XDRIVE, GRANE COUPE, XDRIVE GRAN COUPE" />

        <RadioButton
            android:id="@+id/radioButton440"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="440I (XDRIVE, GRANE COUPE, XDRIVE GRAN COUPE" />

    </RadioGroup>

    <Button
        android:id="@+id/buttoninternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE CLICK TO SELECT INTERNAL FEATURES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroupbmw" />

    <Button
        android:id="@+id/buttonexternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEAE CLICK TO SELECT EXTERNAL FEATURES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoninternal" />

    <Button
        android:id="@+id/buttonlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PLEASE SELECT A LOCATION."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonexternal" />

    <Button
        android:id="@+id/buttonreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="REVIEW ORDER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonlocation" />
</androidx.constraintlayout.widget.ConstraintLayout>